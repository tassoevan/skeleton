{
    "name": "tassoevan/skeleton",
    "description": "Minimal PHP application structure",
    "license": "MIT",

    "authors": [
        {
            "name": "Tasso Evangelista",
            "email": "tasso@tassoevan.me"
        }
    ],

    "require": {
        "slim/slim": "~2.4.0",
        "slim/views": "~0.1.0",
        "slim/extras": "~2.0.3",
        "twig/twig": "~1.15.0",
        "j4mie/paris": "~1.4.0",

        "components/bootstrap": "~3.3.0",
        "robloach/component-installer": "0.0.12.*"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.1.0",
        "phpunit/dbunit": "~1.3.0",
        "squizlabs/php_codesniffer": "~1.5.0"
    },

    "autoload": {
        "psr-4": {
            "MyCompany\\MyApplication\\": "private/classes/"
        },
        "files": [
            "private/boot.php"
        ]
    },

    "config": {
        "vendor-dir": "private/vendor/",
        "component-dir": "public/assets/vendor/",
        "process-timeout": 0
    },

    "scripts": {
        "serve": "php -S 127.0.0.1:8000 -t public/",
        "test": "php private/vendor/bin/phpunit --configuration private/tests/phpunit.xml",
        "sniff": "php private/vendor/bin/phpcs --report=full --standard=PSR2 private/classes"
    }
}
